<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.peliplus.adr">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
            android:networkSecurityConfig="@xml/network_security_config"
            android:allowBackup="true"
            android:icon="@drawable/peliplus_logo"
            android:label="@string/app_name"
            android:roundIcon="@drawable/peliplus_logo_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name="com.peliplus.adr.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.peliplus.adr.activities.DetailMovieActivity"></activity>
        <activity android:name=".activities.user.LoginActivity"></activity>
        <activity android:name=".activities.user.RegisterActivity"></activity>
        <activity android:name=".activities.user.UserActivity"></activity>

    </application>

</manifest>